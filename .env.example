# ===========================================
# InvestLLM Configuration
# ===========================================

# Application
APP_NAME=InvestLLM
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ===========================================
# DATABASE
# ===========================================

# PostgreSQL (with TimescaleDB extension)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=investllm
POSTGRES_USER=investllm
POSTGRES_PASSWORD=your_secure_password_here

# Full connection string
DATABASE_URL=postgresql+asyncpg://investllm:your_secure_password_here@localhost:5432/investllm

# Redis (caching & queues)
REDIS_URL=redis://localhost:6379/0

# Qdrant (vector database)
QDRANT_HOST=localhost
QDRANT_PORT=6333

# ===========================================
# DATA SOURCES
# ===========================================

# Zerodha Kite (real-time data)
ZERODHA_API_KEY=your_key
ZERODHA_API_SECRET=your_secret
ZERODHA_ACCESS_TOKEN=

# Firecrawl (web scraping)
FIRECRAWL_API_KEY=your_key

# Screener.in (fundamentals) - if you have API access
SCREENER_API_KEY=

# ===========================================
# AI/ML PROVIDERS
# ===========================================

# HuggingFace (model downloads)
HF_TOKEN=your_huggingface_token

# Weights & Biases (experiment tracking)
WANDB_API_KEY=your_wandb_key
WANDB_PROJECT=investllm

# OpenAI (optional, for comparison)
OPENAI_API_KEY=

# Anthropic Claude (for orchestration help)
ANTHROPIC_API_KEY=your_claude_key

# Google Gemini
GEMINI_API_KEY=your_gemini_key

# ===========================================
# COMPUTE
# ===========================================

# RunPod (GPU training)
RUNPOD_API_KEY=

# Modal (serverless inference)
MODAL_TOKEN_ID=
MODAL_TOKEN_SECRET=

# ===========================================
# STORAGE
# ===========================================

# AWS S3 (model storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-south-1
S3_BUCKET=investllm-models

# Local paths
DATA_DIR=./data
MODELS_DIR=./models
CACHE_DIR=./cache

# ===========================================
# TRAINING CONFIGURATION
# ===========================================

# GPU settings
CUDA_VISIBLE_DEVICES=0
TORCH_CUDA_ARCH_LIST=8.0

# Training defaults
DEFAULT_BATCH_SIZE=32
DEFAULT_LEARNING_RATE=2e-5
DEFAULT_EPOCHS=3

# ===========================================
# BACKTESTING
# ===========================================

# Capital settings
INITIAL_CAPITAL=1000000
MAX_POSITION_SIZE=0.05
STOP_LOSS_PERCENT=0.05

# ===========================================
# API SETTINGS
# ===========================================

API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# JWT for API auth
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
